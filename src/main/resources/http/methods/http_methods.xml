<?xml version="1.0" encoding="UTF-8"?>

<?xml-stylesheet type="text/xsl" href="../properties/http_method.xsl"?>

<httpMethods xmlns="http://example.com/http-methods">

	<!-- HTTP Method: GET -->
	<method name="GET">
		<description>Retrieve data from the server</description>
		<characteristics>
			<characteristic>Safe</characteristic>
			<characteristic>Idempotent</characteristic>
			<characteristic>Cacheable</characteristic>
		</characteristics>
		<request>
			<body>No body</body>
			<parameters>Query parameters only</parameters>
			<headers>
				<header>Accept</header>
				<header>If-Modified-Since</header>
				<header>If-None-Match</header>
			</headers>
		</request>
		<response>
			<statusCodes>
				<code>200 OK</code>
				<code>304 Not Modified</code>
				<code>404 Not Found</code>
			</statusCodes>
			<body>Response body with data</body>
		</response>
		<useCases>
			<useCase>Retrieving user profile</useCase>
			<useCase>Fetching product list</useCase>
			<useCase>Getting document content</useCase>
		</useCases>
		<example>
			<url>GET /api/users/123</url>
			<response>
				<code>200 OK</code>
				<contentType>application/json</contentType>
				<body>
					<![CDATA[
                    {
                        "id": 123,
                        "name": "John Doe",
                        "email": "john@example.com"
                    }
                    ]]>
				</body>
			</response>
		</example>
	</method>

	<!-- HTTP Method: POST -->
	<method name="POST">
		<description>Submit data to the server to create a resource</description>
		<characteristics>
			<characteristic>Not Safe</characteristic>
			<characteristic>Not Idempotent</characteristic>
			<characteristic>Cacheable only if explicit headers</characteristic>
		</characteristics>
		<request>
			<body>Yes, with data to create</body>
			<parameters>Path and sometimes query parameters</parameters>
			<headers>
				<header>Content-Type</header>
				<header>Content-Length</header>
				<header>Authorization</header>
			</headers>
		</request>
		<response>
			<statusCodes>
				<code>201 Created</code>
				<code>400 Bad Request</code>
				<code>409 Conflict</code>
			</statusCodes>
			<body>Created resource or error details</body>
			<headers>
				<header>Location (with URI of created resource)</header>
			</headers>
		</response>
		<useCases>
			<useCase>Creating new user</useCase>
			<useCase>Submitting form data</useCase>
			<useCase>Uploading file</useCase>
		</useCases>
		<example>
			<url>POST /api/users</url>
			<request>
				<contentType>application/json</contentType>
				<body>
					<![CDATA[
                    {
                        "name": "Jane Smith",
                        "email": "jane@example.com",
                        "password": "secure123"
                    }
                    ]]>
				</body>
			</request>
			<response>
				<code>201 Created</code>
				<headers>
					<header name="Location">/api/users/456</header>
				</headers>
				<body>
					<![CDATA[
                    {
                        "id": 456,
                        "name": "Jane Smith",
                        "email": "jane@example.com"
                    }
                    ]]>
				</body>
			</response>
		</example>
	</method>

	<!-- HTTP Method: PUT -->
	<method name="PUT">
		<description>Replace a resource entirely or create if not exists</description>
		<characteristics>
			<characteristic>Not Safe</characteristic>
			<characteristic>Idempotent</characteristic>
			<characteristic>Cacheable</characteristic>
		</characteristics>
		<request>
			<body>Yes, complete resource representation</body>
			<parameters>Path parameters to identify resource</parameters>
			<headers>
				<header>Content-Type</header>
				<header>Content-Length</header>
				<header>If-Match</header>
			</headers>
		</request>
		<response>
			<statusCodes>
				<code>200 OK</code>
				<code>201 Created</code>
				<code>204 No Content</code>
				<code>409 Conflict</code>
			</statusCodes>
			<body>Updated resource or empty</body>
		</response>
		<useCases>
			<useCase>Updating user profile</useCase>
			<useCase>Replacing document content</useCase>
			<useCase>Creating resource with known ID</useCase>
		</useCases>
		<example>
			<url>PUT /api/users/123</url>
			<request>
				<contentType>application/json</contentType>
				<body>
					<![CDATA[
                    {
                        "id": 123,
                        "name": "John Doe Updated",
                        "email": "john.updated@example.com",
                        "role": "admin"
                    }
                    ]]>
				</body>
			</request>
			<response>
				<code>200 OK</code>
				<body>
					<![CDATA[
                    {
                        "id": 123,
                        "name": "John Doe Updated",
                        "email": "john.updated@example.com",
                        "role": "admin"
                    }
                    ]]>
				</body>
			</response>
		</example>
	</method>

	<!-- HTTP Method: DELETE -->
	<method name="DELETE">
		<description>Remove a resource from the server</description>
		<characteristics>
			<characteristic>Not Safe</characteristic>
			<characteristic>Idempotent</characteristic>
			<characteristic>Not Cacheable</characteristic>
		</characteristics>
		<request>
			<body>Usually no body</body>
			<parameters>Path parameters to identify resource</parameters>
			<headers>
				<header>Authorization</header>
				<header>If-Match</header>
			</headers>
		</request>
		<response>
			<statusCodes>
				<code>200 OK</code>
				<code>202 Accepted</code>
				<code>204 No Content</code>
				<code>404 Not Found</code>
			</statusCodes>
			<body>Usually empty, sometimes status message</body>
		</response>
		<useCases>
			<useCase>Deleting user account</useCase>
			<useCase>Removing product from catalog</useCase>
			<useCase>Canceling order</useCase>
		</useCases>
		<example>
			<url>DELETE /api/users/123</url>
			<response>
				<code>204 No Content</code>
				<body>Empty</body>
			</response>
		</example>
	</method>

	<!-- HTTP Method: PATCH -->
	<method name="PATCH">
		<description>Partially update a resource</description>
		<characteristics>
			<characteristic>Not Safe</characteristic>
			<characteristic>Not Idempotent</characteristic>
			<characteristic>Cacheable</characteristic>
		</characteristics>
		<request>
			<body>Yes, partial resource data</body>
			<parameters>Path parameters to identify resource</parameters>
			<headers>
				<header>Content-Type</header>
				<header>Content-Length</header>
				<header>If-Match</header>
			</headers>
		</request>
		<response>
			<statusCodes>
				<code>200 OK</code>
				<code>204 No Content</code>
				<code>400 Bad Request</code>
				<code>409 Conflict</code>
			</statusCodes>
			<body>Updated resource or empty</body>
		</response>
		<useCases>
			<useCase>Updating specific user fields</useCase>
			<useCase>Activating/deactivating account</useCase>
			<useCase>Partial document edits</useCase>
		</useCases>
		<example>
			<url>PATCH /api/users/123</url>
			<request>
				<contentType>application/json</contentType>
				<body>
					<![CDATA[
                    {
                        "email": "new.email@example.com"
                    }
                    ]]>
				</body>
			</request>
			<response>
				<code>200 OK</code>
				<body>
					<![CDATA[
                    {
                        "id": 123,
                        "name": "John Doe",
                        "email": "new.email@example.com",
                        "role": "user"
                    }
                    ]]>
				</body>
			</response>
		</example>
	</method>

</httpMethods>
